{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./client/src",
    "paths": {
      "@/*": ["*"],
    }
  },
  "include": ["client/src"],
  "exclude": ["node_modules", "dist"]
} 